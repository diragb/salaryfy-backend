<%- include('../../common/header') %> 
<script src="https://cdn.ckeditor.com/4.14.0/standard/ckeditor.js"></script>
<%- include('../../common/side-bar') %>

<main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">
    <%- include('../../common/navbar') %>
    <div class="container-fluid py-4">
      <div class="row">
        <div class="col-xl-12 col-sm-12 mb-xl-0 mb-12">
          <div class="card">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                  <h6 class="text-white text-capitalize ps-3">Edit Course</h6>
                </div>
              </div>
            <div class="card-body px-3 pb-2">
                <form role="form" action="/course/update/<%= course.id %>/?_csrf=<%=csrfToken%>" method="post" novalidate enctype="multipart/form-data">
                  <div class="input-group input-group-outline mb-3">
                    <select name="category_id" class="form-control">
                        <option value="">Select Category</option>
                        <% categories.forEach(category=> { %>
                          <option value="<%= category.id %>" <%= category.id == course.category_id? 'selected':'' %> ><%= category.name %></option>
                        <% }) %>
                    </select>
                  </div>
                    <div class="input-group input-group-outline mb-3 is-filled">
                      <label class="form-label">Name</label>
                      <input type="text" class="form-control" name="name" value="<%= course.name%>" required>
                    </div>
                    <label class="form-label">Description</label>

                    <div class="input-group input-group-outline mb-3 w-100 d-block">
                      <textarea type="text" class="form-control w-100" name="description" required><%= course.description%></textarea>
                      <script>
                        CKEDITOR.replace('description');
                    </script>
                    </div>
                    <div class="row">
                      <div class="col-lg-3">
                        <div class="input-group input-group-outline mb-3 ">
                          <label class="form-label">Image</label>
                          <input type="file" class="form-control" name="image" required>
                        </div>
                      </div>
                      <div class="col-lg-3">
                        <div class="input-group input-group-outline mb-3 is-filled">
                          <label class="form-label">Course Duration</label>
                          <input type="text" class="form-control" name="course_duration" value="<%= course.course_duration%>" required>
                        </div>
                      </div>
                      <div class="col-lg-3">
                        <div class="input-group input-group-outline mb-3 is-filled">
                          <label class="form-label">Placement Duration</label>
                          <input type="text" class="form-control" name="placement_duration" value="<%= course.placement_duration%>" required>
                        </div>
                      </div>
                      <div class="col-lg-3">
                        <div class="input-group input-group-outline mb-3 is-filled">
                          <label class="form-label">Price</label>
                          <input type="number" class="form-control" name="price" value="<%= course.price%>" required>
                        </div>
                      </div>
                    </div>
                    <label class="form-label">Curriculum Content</label>
                    <div class="input-group input-group-outline mb-3 w-100 d-block">
                      <textarea type="text" class="form-control" name="curriculum_content" required><%= course.curriculum_content%></textarea>
                      <script>
                        CKEDITOR.replace('curriculum_content');
                      </script>
                    </div>
                    <label class="form-label">Career Center Content</label>
                    <div class="input-group input-group-outline mb-3 w-100 d-block">
                      <textarea type="text" class="form-control" name="career_center_content" required><%= course.career_center_content%></textarea>
                      <script>
                        CKEDITOR.replace('career_center_content');
                      </script>
                    </div>
                    <label class="form-label">Final Exam Content</label>
                    <div class="input-group input-group-outline mb-3 w-100 d-block">
                      <textarea type="text" class="form-control" name="final_exam_content" required><%= course.final_exam_content%></textarea>
                      <script>
                        CKEDITOR.replace('final_exam_content');
                      </script>
                    </div>
                    <label class="form-label">Mock Interview Content</label>
                    <div class="input-group input-group-outline mb-3 w-100 d-block">
                      <textarea type="text" class="form-control" name="mock_interview_content" required><%= course.mock_interview_content%></textarea>
                      <script>
                        CKEDITOR.replace('mock_interview_content');
                      </script>
                    </div>
                    <label class="form-label">Placement Drive Content</label>
                    <div class="input-group input-group-outline mb-3 w-100 d-block">
                      <textarea type="text" class="form-control" name="placement_drive_content" required><%= course.placement_drive_content%></textarea>
                      <script>
                        CKEDITOR.replace('placement_drive_content');
                      </script>
                    </div>
                    <label class="form-label">Job Role Content</label>
                    <div class="input-group input-group-outline mb-3 w-100 d-block">
                      <textarea type="text" class="form-control" name="job_role_content" required><%= course.job_role_content%></textarea>
                      <script>
                        CKEDITOR.replace('job_role_content');
                      </script>
                    </div>
                    <label class="form-label">Student Review Content</label>
                    <div class="input-group input-group-outline mb-3 w-100 d-block">
                      <textarea type="text" class="form-control" name="student_review_content" required><%= course.student_review_content%></textarea>
                      <script>
                        CKEDITOR.replace('student_review_content');
                      </script>
                    </div>
                    

                    <div class="text-center">
                      <button type="submit" class="btn btn-lg bg-gradient-primary btn-lg mt-4 mb-0">Update</button>
                    </div>
                  </form>
        </div>
    </div>
    </div>
    </div>
</div>
</main>


<%- include('../../common/footer') %> 