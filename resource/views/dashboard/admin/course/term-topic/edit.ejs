<%- include('../../../common/header') %> 
<%- include('../../../common/side-bar') %>

<main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">
    <%- include('../../../common/navbar') %>
    <div class="container-fluid py-4">
      <div class="row">
        <div class="col-xl-3 col-sm-3 mb-xl-0 mb-4">
        </div>

        <div class="col-xl-6 col-sm-6 mb-xl-0 mb-4">
          <div class="card">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                  <h6 class="text-white text-capitalize ps-3">Edit Term</h6>
                </div>
              </div>
            <div class="card-body px-3 pb-2">
                <form role="form" action="/course/term-topic/update/<%= term_topic.id %>" method="post" novalidate>
                  <div class="input-group input-group-outline mb-3">
                    <select name="course_term_id" class="form-control">
                        <option value="">Select Course</option>
                        <% course_term.forEach(term=> { %>
                          <option value="<%= term.id %>" <%= term.id == term_topic.course_term_id? 'selected':'' %>><%= term.name %></option>
                        <% }) %>
                    </select>
                  </div>
                    <div class="input-group input-group-outline mb-3 is-filled">
                      <label class="form-label">Name</label>
                      <input type="text" class="form-control" name="name" value="<%= term_topic.name %>" required>
                      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    </div>
                    <div class="input-group input-group-outline mb-3 w-100 d-block">
                      <textarea type="text" class="form-control w-100" name="description" required><%= term_topic.description %></textarea>
                    </div>
                    

                    <div class="text-center">
                      <button type="submit" class="btn btn-lg bg-gradient-primary btn-lg mt-4 mb-0">Update</button>
                    </div>
                  </form>
        </div>
    </div>
    </div>
    </div>
</div>
</main>


<%- include('../../../common/footer') %> 